{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],

    "no-tabs": ["error", { "allowIndentationTabs": true }],

    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreComments": true
      }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "never"]
    // "no-console": "warn"
  }
}
